<h1>All Statuses</h1>

<table>
  <thead>
    <tr>
      <th>GitHub PR Link</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.github_pr_link %></td>
        <td><%= status.date %></td>
        <td><%= status.user ? status.user.name : 'User not available' %></td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= link_to 'Destroy', status, data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_status_path %>
