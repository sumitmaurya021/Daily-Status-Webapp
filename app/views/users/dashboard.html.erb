<style>
  .divider {
    border-left: 1px solid #ccc; /* Adjust color and width as needed */
    height: 50px; /* Adjust height as needed */
    margin-left: 10px; /* Adjust spacing as needed */
  }
  
  .logo {
    padding-left: 10px; /* Adjust spacing as needed */
  }
  
</style>



<div class="status-design">
    <div class="status-design-left">
      <h3 class="text-white p-2">Daily Status Webapp</h3>
      <h2 class="text-white p-2">
        <h3 class="text-white p-2"><% if current_user.admin? %> Admin Dashboard <% else %> Employee Dashboard <% end %></h3>
      </h2>
      <p class="borderdeignstatus"></p>
  
      <div class="d-flex flex-column gap-3 p-2">
        <h3><%= link_to 'Dashboard', root_path, class: "btn btn-primary" %></h3>
        <h3><%= link_to 'Statuses', statuses_path, class: "btn btn-primary" %></h3>
        <h3><%= link_to 'New Status', new_status_path, class: "btn btn-primary" %></h3>
        <h3><%= link_to 'Logout', destroy_user_session_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %></h3>
      </div>
    </div>
  
    <div class="status-design-right status-design-1">
      <div class="statusheader">
        <div class="dropdown d-flex justify-content-end">
          <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <p class="text-end m-0 p-2"><%= current_user.name %></p>
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/">Profile</a></li>
            <li><a class="dropdown-item" href="/">Setting</a></li>
            <%= link_to 'Logout', destroy_user_session_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "dropdown-item" %>
          </ul>
        </div>
      </div>
      <div>
        <div>
          <h2 class="text-dark p-2">Dashboard for > <%= current_user.name %></h2>
        </div>
        <div>
          <div class="container mt-4">
            <div class="row">
              <div class="col-md-6">
                <div class="card border-primary" style="max-width: 300px;">
                  <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                      <h5 class="card-title text-primary">Employees <p class="card-text"><%= @employees_present_count %></p></h5>
                    </div>
                    <div class="divider"></div>
                    <div class="logo">
                      <i class="fa-solid fa-users fa-3x text-primary"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="container mt-4">
            <div class="row">
              <div class="col-md-6">
                <div class="card border-primary" style="max-width: 300px;">
                  <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                      <h5 class="card-title text-primary">Pending Reviews <p class="card-text">
                        <% if current_user.admin? %>
                          <%= "#{@pending_reviews_count}/#{@total_reviews_count}" || 'Loading ..' %>
                            <% else %>
                            <%= "#{@current_employees_pending_reviews_count}/#{@current_employees_total_reviews_count}" || 'Loading ..' %>
                          <% end %>
                      </p></h5>
                    </div>
                    <div class="divider"></div>
                    <div class="logo">
                      <i class="fa-solid fa-3x fa-clock"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="container mt-4">
            <div class="row">
              <div class="col-md-6">
                <div class="card border-primary" style="max-width: 300px;">
                  <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                      <h5 class="card-title text-primary">Pending Reviews <p class="card-text">
                        <% if current_user.admin? %>
                          <%= "#{@pending_reviews_count}/#{@total_reviews_count}" || 'Loading ..' %>
                            <% else %>
                            <%= "#{@current_employees_pending_reviews_count}/#{@current_employees_total_reviews_count}" || 'Loading ..' %>
                          <% end %>
                      </p></h5>
                    </div>
                    <div class="divider"></div>
                    <div class="logo">
                      <i class="fa-solid fa-3x fa-clock"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>
  